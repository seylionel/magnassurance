{% extends 'base.html.twig' %}


{% block body %}

    <header>
        <div class="row">

            <div class="col-sm-4 "><img src="{{ asset('build/images/logo5.png') }}" alt=""></div>
            <div class="col-sm-8 text-right">
                <ul>
                    {% if app.user %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a href="{{ path('admin') }}"><i class="fa fa-cogs"></i> Administration</a></li>
                        {% endif %}
                        <li><a href="{{ path('user_show',{"id": app.user.id} )}}">Profile</a></li>
                        <li><a href="{{ path('app_logout') }}"><i class="fa fa-sign-out"></i> Log out</a></li>
                    {% else %}
                        <li><a href="{{ path('app_register') }}"><i class="fa fa-user-plus fa-lg" aria-hidden="true"></i></a></li>
                        <li><a href="{{ path('app_login') }}"><i class="fa fa-sign-in fa-lg" aria-hidden="true"></i></a></li>
                        <li><a href="{{ path('prospectBoard_index') }}"><i class="fa fa-exchange fa-lg" aria-hidden="true"></i></a></li>
                    {% endif %}
                </ul>


            </div>

            <div class="col-sm-12">{% include 'default/_menu.html.twig' %}</div>

        </div>
    </header>
    <div class="row main">

        {% include 'default/_main.html.twig' %}







    </div>

    </div>



{% endblock %}
