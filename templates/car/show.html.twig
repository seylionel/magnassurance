{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
    <h1>Car</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ car.model }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ car.brand }}</td>
            </tr>
            <tr>
                <th>Power</th>
                <td>{{ car.power }}</td>
            </tr>
            <tr>
                <th>Gas</th>
                <td>{{ car.gas }}</td>
            </tr>
            <tr>
                <th>Registration</th>
                <td>{{ car.registration }}</td>
            </tr>
            <tr>
                <th>InsuranceExist</th>
                <td>{{ car.insuranceExist ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('car_index') }}">back to list</a>

    <a href="{{ path('car_edit', {'id': car.id}) }}">edit</a>

    {{ include('car/_delete_form.html.twig') }}
{% endblock %}
